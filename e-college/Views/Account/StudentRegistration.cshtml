@model Core.ViewModels.ApplicationUserViewModel
@{
    ViewData["Title"] = "Student Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-4">
    <div class=" col-md-6 m-auto">
        <form id="multiSectionForm">
            <h2 class="text-center">Student Details </h2>
            <p class="text-center"> Fill the student registration form below. <small> (All fields marked <span class="text-danger">*</span> are compulsory)</small></p>
            <!-- Section 1 -->
            <div class="section mt-3" id="section1">
                <h4>Section 1</h4>
                <div class="form-group mb-2">
                    <label>Username <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="username" >
                    <div id="usernameError" class="error"></div>
                </div>
                <div class="form-group mb-2">
                    <label>Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="email" >
                    <div id="emailError" class="error"></div>
                </div>
                <div class="form-group mb-2">
                    <label>Password <small> Password should be from 8 characters </small> <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="password" >
                    <div id="passwordError" class="error"></div>
                </div>
                <div class="form-group mb-2">
                    <label>Confirm Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="confirmPassword" >
                    <div id="confirmPasswordError" class="error"></div>
                </div>
                <button id="submit-btn" type="button" style="float: right;" class="btn btn-primary px-5 py-3 mt-3" onclick="nextSection(2)">Next 
                    <i class="fa fa-arrow-right ms-3"> </i></button>
            </div>

            <!-- Section 2 -->
            <div class="section mt-3" id="section2" style="display: none;">
                <h4>Section 2</h4>
                <div class="form-group mb-2">
                    <label>Firstname <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="firstname" >
                </div>
                <div class="form-group mb-2">
                    <label>Lastname <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="lastname" >
                </div>
                <div class="form-group mb-2">
                    <label >Othername (Optional)</label>
                    <input type="text" class="form-control" id="othername" >
                </div>
                <div class="form-group mb-2">
                    <label>Phonenumber <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="phonenumber" >
                </div>
                <div class="form-group mb-2">
                    <label>State of Residence <span class="text-danger">*</span> </label>
                    <input type="text" class="form-control" id="state" >
                </div>
                <div class="form-group mb-2">
                    <label>Country of Residence <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="country" >
                </div>
                <button type="button" class="btn btn-outline-secondary px-5 py-3 mt-3" onclick="previousSection(1)">
                    <i class="fa fa-arrow-left ms-3"> </i>
                    Previous
                </button>
                <button type="button" style="float: right;" class="btn btn-primary px-5 py-3 mt-3" onclick="nextSection(3)">
                    Next
                    <i class="fa fa-arrow-right ms-3"> </i>
                </button>
            </div>
            
            <!-- Section 3 -->
            <div class="section mt-3" id="section3" style="display: none;">
                <h4>Section 3</h4>
               
                <div class="form-group mb-2">
                    <label>Date of Birth <span class="text-danger">*</span> </label>
                    <input type="date" class="form-control" id="dateOfBirth" required>
                </div>
                <div class="form-group mb-2">
                    <label>Residential Address <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="address" required>
                </div>
                <div class="form-group">
                    <p> Educational Level (Please choose your educational level) <span class="text-danger">*</span></p>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="toggleCheckbox" onchange="toggleTextbox()">
                        <label class="form-check-label" for="toggleCheckbox"> Primary </label>
                    </div>
                </div>
                <div class="form-group" id="textboxContainer" style="display: none;">
                    <div class="row">
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 1</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary1" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 2</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary2" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 3</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary3" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 4</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary4" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 5</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary5" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">Pri - 6</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="primary6" style="margin-left: 3px;" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="toggleCheckbox2" onchange="toggleTextbox2()">
                        <label class="form-check-label" for="toggleCheckbox2"> Secondary </label>
                    </div>
                </div>
                <div class="form-group" id="textboxContainer2" style="display: none;">
                    <div class="row">
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2"> JS I</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary1" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">JS II</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary2" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">JS III </label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary3" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">SS I</label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary4" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2">SS II </label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary5" style="margin-left: 3px;" required>
                        </div>
                        <div class="col-sm-6 col-lg-2 d-flex">
                            <label class="mb-2"> SSS III </label>
                            <input type="checkbox" class="form-check-input user-checkbox" data-user-id="secondary6" style="margin-left: 3px;" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label"> Tertiary  </label>
                        <input type="checkbox" class="form-check-input" id="tertiary">
                    </div>
                </div>

                <button type="button" class="btn btn-outline-secondary px-5 py-3 mt-3" onclick="previousSection(2)">
                    <i class="fa fa-arrow-left ms-3"> </i>
                    Previous
                </button>
                <button type="submit" id="submit_btn" style="float: right;" 
                class="btn btn-primary px-5 py-3 mt-3 approve" onclick="RegisterStudent()">Submit</button>
            </div>
        </form>
    </div>
</div>


<script>
    function nextSection(nextSectionNumber) {
        var currentSectionNumber = nextSectionNumber - 1;
        var currentSection = document.getElementById('section' + currentSectionNumber);
        var nextSection = document.getElementById('section' + nextSectionNumber);

        var data = {};
        data.Username = $("#username").val();
        data.Email = $("#email").val();
        data.Password = $("#password").val();
        data.ConfirmPassword = $("#confirmPassword").val();

        if (currentSection && nextSection) {
            if (data.Username == "" || data.Username == undefined && data.Email == "" || data.Email == undefined && data.Password == "" || 
                data.Password == undefined && data.ConfirmPassword == "" || data.ConfirmPassword == undefined) {
                validateForm("username", "Username cannnot be empty");
                validateForm("email", "Email cannnot be empty");
                validateForm("password", "Password cannnot be empty");
                validateForm("confirmPassword", "Confirm Password cannnot be empty");
            } 
            else
            {
                currentSection.style.display = 'none';
                nextSection.style.display = 'block';
            }
           
        }

        


    }
    function previousSection(previousSectionNumber) {
        var currentSectionNumber = previousSectionNumber + 1;
        var currentSection = document.getElementById('section' + currentSectionNumber);
        var previousSection = document.getElementById('section' + previousSectionNumber);

        if (currentSection && previousSection) {
            currentSection.style.display = 'none';
            previousSection.style.display = 'block';
        }
    }

    function validateForm(id, message) {
        $("#" + id + "Error").text(message).css({ color: "red" });
        $("#" + id).css({ border: "2px solid red" });
    }
</script>

<script>
    function toggleTextbox() {
        var checkbox = document.getElementById('toggleCheckbox');
        var textboxContainer = document.getElementById('textboxContainer');

        if (checkbox.checked) {
            textboxContainer.style.display = 'block';
        } else {
            textboxContainer.style.display = 'none';
        }
    }

    function toggleTextbox2() {
        var checkbox = document.getElementById('toggleCheckbox2');
        var textboxContainer2 = document.getElementById('textboxContainer2');

        if (checkbox.checked) {
            textboxContainer2.style.display = 'block';
        } else {
            textboxContainer2.style.display = 'none';
        }
    }
</script>
